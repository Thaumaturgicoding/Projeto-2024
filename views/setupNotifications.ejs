<!-- views/setupNotifications.ejs - Página para configurar notificações automáticas -->
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Configurar Notificações - Rastreador de Tabaco</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/notificationSetup.js" defer></script>
</head>
<body>
    <header>
        <h1>Configurar Notificações</h1>
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <form id="notificationForm">
            <label for="type">Tipo de Notificação:</label>
            <select id="type" name="type">
                <option value="email">Email</option>
                <option value="sms">SMS</option>
            </select>
            <label for="time">Horário para Notificação:</label>
            <input type="time" id="time" name="time" required>
            <button type="submit">Configurar Notificação</button>
        </form>
    </main>
    <footer>
        <p>&copy; 2024 Rastreador de Tabaco. Todos os direitos reservados.</p>
    </footer>
</body>
</html>
