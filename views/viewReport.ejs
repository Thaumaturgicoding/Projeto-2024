<!-- views/viewReport.ejs - Página para visualizar relatórios -->
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Visualizar Relatório - Rastreador de Tabaco</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Relatório de Progresso e Metas</h1>
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Relatório de <%= new Date(report.startDate).toLocaleDateString() %> a <%= new Date(report.endDate).toLocaleDateString() %></h2>
        <section>
            <h3>Progresso</h3>
            <ul>
                <% report.data.progress.forEach(item => { %>
                    <li>Data: <%= new Date(item.date).toLocaleDateString() %>, Cigarros: <%= item.smokesPerDay %></li>
                <% }); %>
            </ul>
        </section>
        <section>
            <h3>Metas</h3>
            <ul>
                <% report.data.goals.forEach(goal => { %>
                    <li>Meta: <%= goal.targetSmokesPerDay %> cigarros até <%= new Date(goal.targetDate).toLocaleDateString() %></li>
                <% }); %>
            </ul>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Rastreador de Tabaco. Todos os direitos reservados.</p>
    </footer>
</body>
</html>
