<!-- views/dashboard.ejs - Página do dashboard do usuário -->
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - Rastreador de Tabaco</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Dashboard</h1>
        <nav>
            <ul>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Bem-vindo, <%= user.username %>!</h2>
        <p>Última sessão em: <%= user.updatedAt.toDateString() %></p>
        <div>
            <h3>Seu progresso</h3>
            <p>Parou de fumar em: <%= user.quitDate.toDateString() %></p>
            <p>Cigarros por dia: <%= user.dailySmokes %></p>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Rastreador de Tabaco. Todos os direitos reservados.</p>
    </footer>
</body>
</html>
